<div class="row">
  <div class="col-md-5">
    <%= form_with model: @city do |form| %>
      <div>
        <%= form.label :name,"Имя",class:"form-label",required:true %>
        <%= form.text_field :name,class:"form-control" + " is-invalid"*@city.errors.full_messages_for(:name).length %>
        <% puts @city.errors.full_messages_for(:name).each do |message| %>
          <div class="invalid-feedback"><%= message %></div>
        <% end %>
      </div>
      <br/>
      <div>
        <label>Регион</label>
        <%= form.collection_select :region_id, Region.all, :id, :name,{},{class: "form-select"} %>
      </div>
      <br/>
      <div>
        <%= form.submit "Сохранить",class:"btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>